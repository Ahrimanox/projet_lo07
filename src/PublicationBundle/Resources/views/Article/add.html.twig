{% extends "PublicationBundle:Default:base.html.twig" %}

{% block title %}Ajout d'un article{% endblock %}
{% block header %}
<script type="text/javascript">
	var checkCategorie = function(value)
	{
		if (value == 2 || value == 4)
		{
			$("#lieuHtml").attr("required", "");
			$("#lieuHtml").show();
		}
		else
		{
			$("#lieuHtml").removeAttr("required");
			$("#lieuHtml").hide();
		}
	}

	var nombreAutheur = 1;
	var selects = new Array();
	var last = $('#autheurs');
	$(document).ready(function() {
		$('#file').bootstrapFileInput();
		$("#categorie").val(1);
		$("#lieuHtml").hide();

		selects.push($("#autheurs"));

		$("#plus").click(function() {
			last = $("#autheurs").clone();
			$(this).before(last);

			foreach (elm in selects)
			{
				var value = elm.val();

				
			}
			
			selects.push(last);
			nombreAutheur++;


		});
